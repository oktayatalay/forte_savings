# Allow Authorization header to pass through - Enhanced
RewriteEngine On

# Method 1: Direct authorization header  
RewriteCond %{HTTP:Authorization} ^(.+)$
RewriteRule .* - [E=HTTP_AUTHORIZATION:%1]

# Method 2: Alternative authorization header names
RewriteCond %{HTTP:X-Authorization} ^(.+)$
RewriteRule .* - [E=HTTP_AUTHORIZATION:%1]

# Method 3: Handle Authorization header for FastCGI/FPM - Multiple approaches
SetEnvIf Authorization "(.+)" HTTP_AUTHORIZATION=$1
SetEnvIf Authorization "(.+)" REDIRECT_HTTP_AUTHORIZATION=$1

# Method 4: Force authorization header through CGI
CGIPassAuth On

# Method 5: Handle all auth-related headers
RewriteCond %{HTTP:Authorization} ^Bearer\s(.+)$
RewriteRule .* - [E=HTTP_AUTHORIZATION:Bearer %1]

# Method 6: Alternative env var setting
SetEnvIf Authorization "Bearer\s(.+)" HTTP_AUTHORIZATION="Bearer $1"

# CORS headers for API requests
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
Header always set Access-Control-Max-Age "3600"

# Handle preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]